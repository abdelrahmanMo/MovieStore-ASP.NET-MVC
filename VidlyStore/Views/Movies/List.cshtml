

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <h1>Movies</h1>
        @Html.ActionLink("New Movie", "New", "Movies", new { @class = "btn btn-primary", @style = "margin-bottom:4px;" })

        <div class="ibox-content">


            <table id="movies" class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th>Movie</th>
                        <th>Genre</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>

        </div>

    </div>
</div>
@section scripts
{
    <script src="~/Scripts/AppScript/Movies/MoviesJs.js"></script>
  
}
